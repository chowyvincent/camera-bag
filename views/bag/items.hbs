<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories/{{category}}">{{categoryName}} Cameras & Lenses</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{productTypeName}}</li>
  </ol>
</nav>

{{#if addSuccess}}
	<div class="alert alert-success">
		{{# each messages}}
			<p>{{this}}</p>
		{{/each}}
	</div>
{{/if}}

{{# each products }}
	<div class="row">
		{{# each this }}	
			<div class="col-sm-6 col-md-4">
				<div class="thumbnail">
				  	<img src={{this.imageUrl}} class="img-responsive" alt="...">
				  	<div class="caption">
				    	<h3>{{this.itemName}}</h3>
				    	<div class="clearfix">
					      	<div class="price pull-left">${{this.price}}</div>	
					      	<a href="/add-to-gearlist/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Gear List</a>
				    	</div>				    	
					</div>
				</div>
		    </div>
      	{{/each}}
	</div>
{{/each}}