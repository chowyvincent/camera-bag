{{!-- We have a gear list signaled by results variable --}}
<div class="row">
	<h1 class="col-sm-4 col-md-offset-4">Welcome {{username}}!</h1>
</div>
{{# if results }}
	{{# each results }}
		<div class="row">
			{{# each this }}	
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
						<ul>
							<li>Gear List Title: {{this.title}}</li>
							<li>Gear List Description: {{this.description}}</li>
							<li>Items in Gear List: {{this.totalQty}}</li>
							<li>Total Item Price: ${{this.totalPrice}}</li>
						</ul>
					  	{{!-- <img src={{this.products}} class="img-responsive" alt="..."> --}}
					  	{{!-- <div class="caption">
					    	<h3>{{this.totalQty}}</h3>
					    	<div class="clearfix">
						      	<div class="price pull-left">{{this.description}}</div>	
						      	<a href="/add-to-gearlist/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to Gear List</a>
					    	</div>				    	
						</div> --}}
					</div>
			    </div>
	      	{{/each}}
		</div>
	{{/each}}
{{else}}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<h2>No Gear Lists in your Bag</h2>
		</div>
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/">
				<button type="button" class="btn btn-success">Create Gear List</button>	
			</a>
		</div>
	</div>
{{/if}}

